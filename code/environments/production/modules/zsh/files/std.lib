#!/bin/zsh

function std/_exit() {
    exit 0
}

trap std/_exit INT TERM EXIT

function std/appendToFunction() {
    local func="$1"
    shift
    functions[$func]=' '"$@"'; '"$functions[$func]"';'
}

function std/defer() {
    std/appendToFunction std/_exit $@
}

function std/root() {
    if [[ "$(whoami)" != "root" ]] ; then
	echo "This script must be run as root!"
	exit 1
    fi
}

function std/onceAround() {
    local lock="$1"

    if [[ -f "$lock" ]]; then
	exit 0
    fi

    touch "$lock"
}

function std/once() {
    local name="$1"
    local locks="/mnt/ram/$(whoami)/Locks"
    local lock="$locks/$(std/_sanitizePath "$name").once.lock"

    mkdir -p "$locks"
    std/onceAround "$lock"
}

function std/start() {
    local name="$1"
    shift
    local locks="/mnt/ram/$(whoami)/Locks"
    local lock="$locks/$(std/_sanitizePath "$name").pid"

    mkdir -p "$locks"
    $@ &
    local ret="$!"
    std/onceAround "$lock"
    echo "$ret" > "$lock"
}

function std/stop() {
    local name="$1"
    local locks="/mnt/ram/$(whoami)/Locks"
    local lock="$locks/$(std/_sanitizePath "$name").pid"

    if [[ ! -f "$lock" ]]; then
        exit
    fi

    kill "$(cat "$lock")"
    rm -rf "$lock"
}

function std/lockAround() {
    local lock="$1"

    std/onceAround "$lock"

    std/defer rm -rf "$lock"
}

function std/lock() {
    local name="$1"
    local locks="/mnt/ram/$(whoami)/Locks"
    local lock="$locks/$(std/_sanitizePath "$name").lock"

    mkdir -p "$locks"
    std/lockAround "$lock"
}

function std/_sanitizePath() {
    local toSanitize="$1"

    echo "$toSanitize" | sed -e 's;/;!;g' -e 's; ;_;g'
}

function std/runDir() {
    local rund="$1"
    shift

    local oldifs="$IFS"
    IFS=$'\n'
    for file in $(ls "$rund"/); do
        IFS="$oldifs"
        "$rund"/"$file" $@
        IFS=$'\n'
    done
    IFS="$oldifs"
}

function std/applyDir() {
    local func="$1"
    shift 
    local dir="$1"
    shift

    local oldifs="$IFS"
    IFS=$'\n'
    for file in $(ls "$dir"/); do
        IFS="$oldifs"
        "$func" "$dir"/"$file" $@
        IFS=$'\n'
    done
    IFS="$oldifs"
}

function std/users() {
    cat /etc/passwd | cut -f1 -d:
}
